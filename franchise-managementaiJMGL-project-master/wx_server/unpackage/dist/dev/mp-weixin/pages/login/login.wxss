.login-container {
  padding: 0 60rpx;
  min-height: 100vh;
  background-color: #fff;
}
.header {
  padding-top: 200rpx;
  margin-bottom: 120rpx;
}
.header .welcome-text {
  display: block;
  font-size: 48rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}
.header .platform-text {
  display: block;
  font-size: 48rpx;
  font-weight: 500;
  color: #333;
}
.form-container .input-group {
  margin-bottom: 40rpx;
}
.form-container .input-group .input-field {
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #333;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  border: none;
  box-sizing: border-box;
}
.form-container .input-group .input-field::-webkit-input-placeholder {
  color: #999;
}
.form-container .input-group .input-field::placeholder {
  color: #999;
}
.form-container .verification-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.form-container .verification-group .verification-input {
  flex: 1;
}
.form-container .verification-group .send-code-btn {
  font-size: 28rpx;
  color: #007AFF;
  white-space: nowrap;
  cursor: pointer;
}
.form-container .login-btn {
  width: 100%;
  height: 88rpx;
  background-color: #007AFF;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
  margin-top: 60rpx;
  margin-bottom: 40rpx;
}
.form-container .login-btn:active {
  background-color: #0056CC;
}
.form-container .wechat-login-btn {
  width: 100%;
  height: 88rpx;
  background-color: #07C160;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
}
.form-container .wechat-login-btn:active {
  background-color: #06A050;
}

